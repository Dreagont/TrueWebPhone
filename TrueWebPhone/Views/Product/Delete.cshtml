@model TrueWebPhone.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="display-4">Delete Product</h1>

    <div class="row">
        <div class="col-md-4 d-flex align-items-center">
            <!-- Display product image on the left with specific dimensions -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="~/uploads/@Model.ImagePath" alt="Product Image" class="img-fluid" style="width: 5cm; height: 6cm;" />
            }
            else
            {
                <span>No image available</span>
            }
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Are you sure you want to delete this product?</h3>

                    <table class="table">
                        <tr>
                            <th>Product Name:</th>
                            <td>@Html.DisplayFor(model => model.ProductName)</td>
                        </tr>
                        <tr>
                            <th>Barcode:</th>
                            <td>@Html.DisplayFor(model => model.Barcode)</td>
                        </tr>
                        <tr>
                            <th>Import Price:</th>
                            <td>@Html.DisplayFor(model => model.ImportPrice)</td>
                        </tr>
                        <tr>
                            <th>Retail Price:</th>
                            <td>@Html.DisplayFor(model => model.RetailPrice)</td>
                        </tr>
                        <tr>
                            <th>Category:</th>
                            <td>@Html.DisplayFor(model => model.Category)</td>
                        </tr>
                        <tr>
                            <th>Creation Date:</th>
                            <td>@Html.DisplayFor(model => model.CreationDate)</td>
                        </tr>
                    </table>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
