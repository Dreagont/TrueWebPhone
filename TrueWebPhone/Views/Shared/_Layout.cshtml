<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrueWebPhone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrueWebPhone.styles.css" asp-append-version="true" />
    <style>
        .jumbotron h1 {
            font-size: 3.5em; /* Increase heading font size */
        }

        .jumbotron p {
            font-size: 2.5em; /* Increase paragraph font size */
        }
        .jumbotron {
            background-image: url('https://cdn.ttgtmedia.com/visuals/ComputerWeekly/Hero%20Images/Apple-iphone12-max-PR-hero.jpg'); /* Replace with your image URL */
            background-size: cover;
            background-repeat: no-repeat;
            color: white;
            border: 2px solid black;
            text-align: center;
            padding: 150px 0;
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TrueWebPhone</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Account
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Index">
                                            <i class="fas fa-user-cog"></i> 
                                            Account Management
                                        </a>
                                    </li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">
                                            <i class="fas fa-user-plus"></i>
                                            Add an Account
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Resend">
                                                <i class="fas fa-envelope"></i>
                                            Resend emails
                                        </a>
                                    </li>
                                    }
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Product
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="productDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">
                                            <i class="fas fa-shopping-cart"></i> 
                                            Product Management
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Create">
                                            <i class="fas fa-plus-circle"></i> 
                                            Add a Product
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Customer
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="customerDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="CustomerList">
                                            <i class="fas fa-address-book"></i> 
                                            Customer Management
                                        </a>
                                    </li>                                    
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Sell" asp-action="Index">POS</a>
                            </li>

                            <div class="text-right">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile">
                                    Profile
                                </a>
                            </div>
                        }
                    </ul>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }
                    
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" style="color: white; background-color: red; border: 1px solid red;" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Main content -->
            <!-- Replace this area with your actual content -->
            <div class="jumbotron">
                <h1>Hello There!</h1>
                <p>Welcome to TrueWebPhone</p>
            </div>
        </main>
    </div>


    <style>
        :root {
            --main-bg-color: #f5f5f5;
            --primary-color: #ff5e14;
            --secondary-color: #f0f0f0;
            --font-family: 'Arial', sans-serif;
        }

        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body and Typography */
        body {
            font-family: var(--font-family);
            color: #333;
            background-color: var(--main-bg-color);
        }

        .navbar-nav .nav-link:hover {
            color: red;
            background-color: white;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .nav-link {
            text-decoration: none;
            color: #333; 
            padding: 10px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #fff; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); 
            z-index: 1;
            padding: 0;
        }

        .dropdown-item {
            display: block;
            padding: 8px 12px;
            color: #333; 
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .dropdown-item:hover {
            background-color: #e9ecef; 
        }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }
    </style>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            <p>&copy; 2023 TrueWebPhone. All Rights Reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
