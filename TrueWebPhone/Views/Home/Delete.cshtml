@model TrueWebPhone.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="display-4">Delete Customer</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Are you sure you want to delete this customer?</h3>

                    <table class="table">                       
                        <tr>
                            <th>Name:</th>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr>
                            <th>Phone:</th>
                            <td>@Html.DisplayFor(model => model.Phone)</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>@Html.DisplayFor(model => model.Address)</td>
                        </tr>
                    </table>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="CustomerList" class="btn btn-secondary ml-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
