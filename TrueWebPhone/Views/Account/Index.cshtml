@model IEnumerable<TrueWebPhone.Models.Account>

@{
    ViewData["Title"] = "Account Management";
}


<div class="container mt-4">
    <h1>Account Management Page</h1>
    <form asp-action="Search" method="get">
        <div class="input-group mb-3">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search Account</button>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchString" placeholder="Enter account information">

        </div>
    </form>
    <p>
        <a class="btn btn-primary" asp-action="Register">Create New</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Name</th>
                <th>Role</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>

                <!-- Bootstrap 5 Modal for Edit -->
                <div class="modal fade" id="editModal_@item.Id" tabindex="-1" aria-labelledby="editModalLabel_@item.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel_@item.Id">Edit Account</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">


                                <form asp-action="Edit" asp-route-id="@item.Id">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <label class="control-label">Email:</label>
                                        <input class="form-control" value="@item.Email" />
                                        <span class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Username:</label>
                                        <input class="form-control" value="@item.Username" />
                                        <span class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Name:</label>
                                        <input class="form-control" value="@item.Name" />
                                        <span class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Role:</label>
                                        <input class="form-control" value="@item.Role" />
                                        <span class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Status:</label>
                                        <input class="form-control" value="@item.Status" />
                                        <span class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Bootstrap 5 Modal for Edit -->
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
